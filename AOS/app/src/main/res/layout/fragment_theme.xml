<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/moabang_lightGray"
    tools:context=".src.main.ThemeFragment">


    <ImageView
        android:id="@+id/iv_themeF_search"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/rounded_rectangle_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_themeF_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="테마 검색"
        android:textColor="@color/moabang_pink"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_themeF_search"
        app:layout_constraintEnd_toStartOf="@+id/et_themeF_search"
        app:layout_constraintStart_toStartOf="@+id/iv_themeF_search"
        app:layout_constraintTop_toTopOf="@+id/iv_themeF_search" />

    <EditText
        android:id="@+id/et_themeF_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@null"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/iv_themeF_search"
        app:layout_constraintEnd_toStartOf="@+id/iv_themeF_search_btn"
        app:layout_constraintStart_toEndOf="@+id/tv_themeF_search"
        app:layout_constraintTop_toTopOf="@+id/iv_themeF_search" />

    <ImageView
        android:id="@+id/iv_themeF_search_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/icon_search"
        app:layout_constraintBottom_toBottomOf="@+id/iv_themeF_search"
        app:layout_constraintEnd_toEndOf="@+id/iv_themeF_search"
        app:layout_constraintStart_toEndOf="@+id/et_themeF_search"
        app:layout_constraintTop_toTopOf="@+id/iv_themeF_search" />


</androidx.constraintlayout.widget.ConstraintLayout>